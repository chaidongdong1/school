/* pages/admin/teacher/teacher.wxss */
.tab{
  width: 100%;
  height: 100rpx;
  display: flex;
  background: #fff;
}
.tab_item{
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  color: #666;
}
.active{
  color: #fc9d49;
}
.bo_r{
  border-right: 1rpx solid #e0e0e0;
}

/*列表  */
.list1{
  width: 100%;
  margin-top: 10rpx;
}
.list_item{
  position: relative;
  width: 100%;
  margin-bottom: 10rpx;
  background: #fff;
}
.list_t{
  padding: 20rpx;
}
.list_tl{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 35rpx;
}
.list_tr{
  width: 470rpx;
  height: 100rpx;
}
.list_tr1{
  width: 470rpx;
  color: #333;
  font-size: 26rpx;
  line-height: 50rpx;
  height: 50rpx;
  margin-top: 5rpx;
  overflow: hidden;
}
.yellow{
  color: #fc9d49
}
.list_tr2{
  width: 450rpx;
  color: #999;
  font-size: 24rpx;
  line-height: 35rpx;
  height: 35rpx;
  overflow: hidden;
}
.send_user{
  max-width: 300rpx;
  padding-left: 30rpx;
  height: 35rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
