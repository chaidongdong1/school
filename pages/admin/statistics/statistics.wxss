/* section1 */
.section1{
  padding: 0 20rpx 0 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}
.order_img{
  width: 34rpx;
  height: 40rpx;
  padding: 24rpx 0;
  display: block;
}
.order_txt{
  font-size: 28rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 16rpx;
}
.order_date{
  font-size: 24rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #999;
}
.arrow::after{
  width: 15rpx;
  height: 15rpx;
}
/*tab  */
.tab{
  width: 100%;
  height: 102rpx;
  display: flex;
  background: #fff;
}
.tab_item{
  flex: 1;
  border-bottom: 4rpx solid #fff;
  padding: 15rpx 0 10rpx;
}
.tab_item .key{
  font-size: 28rpx;
  color: #000;
  text-align: center;
  line-height: 40rpx;
}
.tab_item .val{
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 43rpx;
}
.active .key{
  color: #ff0000;
}
.active .val{
  color: #ff0000;
}
.active{
  border-bottom: 4rpx solid #ff0000;
}

