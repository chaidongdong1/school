/* pages/admin/user_order/user_order.wxss */


/* section1 */

.section1 {
  padding: 0 20rpx 0 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}

.order_img {
  width: 33rpx;
  height: 40rpx;
  padding: 24rpx 0;
  display: block;
}

.order_txt {
  font-size: 28rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 16rpx;
}

.order_date {
  font-size: 24rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #999;
}

.arrow::after {
  width: 15rpx;
  height: 15rpx;
}


/*tab  */

.tab {
  width: 100%;
  height: 102rpx;
  display: flex;
  background: #fff;
}

.tab_item {
  flex: 1;
  border-bottom: 4rpx solid #fff;
  padding: 15rpx 0 10rpx;
}

.tab_item .key {
  font-size: 28rpx;
  color: #000;
  text-align: center;
  line-height: 40rpx;
}

.tab_item .val {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 43rpx;
}

.active .key {
  color: #ff0000;
}

.active .val {
  color: #ff0000;
}

.active {
  border-bottom: 4rpx solid #ff0000;
}


/*列表  */

.list1 {
  width: 100%;
  margin-top: 10rpx;
}

.list_item {
  width: 100%;
  margin-bottom: 10rpx;
  background: #fff;
}

.list_t {
  padding: 20rpx;
}

.list_tl {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 35rpx;
}

.list_tr {
  width: 555rpx;
  height: 100rpx;
}

.list_tr1 {
  width: 555rpx;
  color: #333;
  font-size: 26rpx;
  line-height: 50rpx;
  height: 50rpx;
  margin-top: 5rpx;
  overflow: hidden;
  display: flex;
}

.list-fabu {
  font-size: 24rpx;
  color: #666;
  padding: 0 5rpx;
}

.list-fabu1 {
  font-size: 26rpx;
  color: #333;
  padding: 0 5rpx;
}

.list-fabu1>text {
  color: #f00;
}

.list-bian {
  width: 100%;
  height: auto;
  line-height: 34rpx;
  color: #333;
  font-size: 26rpx;
  padding: 10rpx 0;
}

.list-name {
  max-width: 300rpx;
  height: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-name1 {
  max-width: 200rpx;
  height: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #999;
}

.yellow {
  color: #fc9d49
}

.list_tr2 {
  width: 540rpx;
  color: #999;
  font-size: 26rpx;
  line-height: 40rpx;
  height: 40rpx;
  overflow: hidden;
}

.num>text {
  color: #333;
}

.send_user {
  padding-left: 30rpx;
}

.arrow_wrap {
  width: 20rpx;
  height: 100rpx;
}

.list_b {
  padding: 10rpx 20rpx;
  border-top: 1rpx solid #e0e0e0;
}

.date {
  color: #999;
  font-size: 24rpx;
  line-height: 40rpx;
}

.date>text {
  color: #333;
  font-size: 26rpx;
}

.status {
  color: #fc9d49;
  font-size: 24rpx;
  line-height: 40rpx;
}

.list-b-border {
  border-bottom: 1px solid #e0e0e0;
}

.list-yi {
  width: 96%;
  height: auto;
  margin: 15rpx 0;
  padding: 15rpx 2%;
  line-height: 36rpx;
  position: relative;
}
.list-yi>view:first-child{
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  z-index: 999;
  width: 35rpx;
  height: auto;
  padding: 0 10rpx;
}
.list-yi>view:first-child>image {
  width: 35rpx;
  height: 30rpx;
}

.list-yi>view:last-child {
  font-size: 26rpx;
  color: #666;
  padding-left: 55rpx;
}

.list-yi>view:last-child>text {
  font-size: 26rpx;
  color: #333;
}
