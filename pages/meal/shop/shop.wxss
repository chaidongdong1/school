/* pages/meal/shop/shop.wxss */
page{
  background: #fff;
}
.top_img{
  width: 750rpx;
  height: 230rpx;
  position: relative;
  display: block;
}
.header{
  width: 750rpx;
  height: 180rpx;
  padding-top: 50rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.header_l{
  padding: 0 30rpx;
}
.shop_img{
  width: 130rpx;
  height: 130rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
}
.header_r{
  width: 530rpx;
}
.header_r1{
  font-size: 30rpx;
  color: #fff;
  line-height: 44rpx;
}
.header_r2{
  font-size: 24rpx;
  color: #fff;
  line-height: 40rpx;
  margin-top: 6rpx;
}
.header_r3{
  font-size: 24rpx;
  color: #fff;
  line-height: 40rpx;
}

/*主体部分  */
.cont{
  width: 100%;
  overflow: hidden;
}
.tab{
  width: 100%;
  display: flex;
  height: 100rpx;
}
.tab_item{
  flex: 1;
  border-bottom: 1rpx solid #dadada;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #353535;
  background: #f1f1f6;
}
.active{
  flex: 1;
  border-bottom: 1rpx solid #fc9d49;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #fc9d49;
  background: #fff;
}
.bo_r{
  border-right: 1rpx solid #ccc;
}

/*菜品  */
.dishes_wrap{
  width: 100%;
}
.classify{
  width: 200rpx;
  float: left;
  background: #efeff4;
  overflow-y: scroll;
  padding-bottom: 101rpx;
}
.classify_item{
  width: 196rpx;
  height: 90rpx;
  border-left: 4rpx solid #efeff4;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 90rpx;
}
.active2{
  width: 195rpx;
  border-left: 4rpx solid #fc9d49;
  border-right: 1rpx solid #efeff4;
  background: #fff;
}


.dishes{
  width: 510rpx;
  padding: 0 20rpx 101rpx;
  overflow-y: scroll;
}
.goods{
  padding: 20rpx 0 20rpx;
}
.goods_l{
  width: 120rpx;
  height: 120rpx;
  display: block;
  margin-right: 20rpx;
}
.goods_c{
  max-width: 240rpx;
}
.goods_name{
  font-size: 28rpx;
  color: #333;
  width: 100%;
  line-height: 40rpx;
  height: 40rpx;
}
.goods_sales{
  font-size: 22rpx;
  color: #999;
  line-height: 36rpx;
}
.goods_price{
  width: 370rpx;
  height: 44rpx;
}
.price{
  font-size: 28rpx;
  line-height: 44rpx;
  color: #ff0000;
}
.unit{
  font-size: 20rpx;
  color: #343434;
  line-height: 44rpx;
}
.change_num{
  width: 150rpx;
  height: 44rpx;
}
.sub{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1rpx solid #999;
  color: #333;
  line-height: 36rpx;
  text-align: center;
}
.show_num{
  width: 50rpx;
  height: 44rpx;
  color: #333;
  font-size: 26rpx;
  line-height: 44rpx;
  text-align: center;
}
.add{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #fc9d49;
  color: #fff;
  line-height: 42rpx;
  text-align: center;
}

.botm{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #ccc;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
}
.botm_r{
  width: 180rpx;
  height: 100rpx;
  background-color: #fa610e;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  line-height: 100rpx;
  letter-spacing: 3rpx;
}
.shop_car{
  width: 60rpx;
  height: 60rpx;
  position: relative;
  margin: 20rpx 10rpx 20rpx 30rpx;
  overflow:  visible;
}
.num{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #ff0000;
  top: -10rpx;
  right: -10rpx;
  color: #fff;
  font-size: 22rpx;
}
.num_txt{
  font-size: 24rpx;
  line-height: 100rpx;
  color: #333;
  margin-right: 10rpx;
}
.txt2{
  font-size: 28rpx;
  line-height: 100rpx;
  color: #333;
}
.total{
  font-size: 36rpx;
  line-height: 100rpx;
  color: #ff0101;
}