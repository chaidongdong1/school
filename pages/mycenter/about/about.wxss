/* pages/mycenter/about/about.wxss */
.about{
	width: 100%;
	height: auto;
}
.about>view:first-child{
	font-size: 38rpx;
	color: #309EFD;
	padding: 25rpx 15rpx;
}
.about-bottom{
	width: 96%;
	height: auto;
	padding:0 2%;
	background: #fff;
}
.about-bottom>view{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1px solid #eee;
	display: flex;
	justify-content: space-between;
}
.about-bottom>view>view:first-child{
	width: auto;
	height: 100%;
	font-size: 30rpx;
	color: #333;
}
.about-bottom>view>view:last-child{
	flex: 1;
	display:flex;
	justify-content: flex-end;
}
.about-bottom>view>view:last-child>view:first-child{
	font-size: 28rpx;
	color: #333;
}
.about-bottom>view>view:last-child>image{
	width: 15rpx;
	height: 25rpx;
	margin: 27rpx 0 27rpx 15rpx;
}
.about-jian{
	width: 96%;
	padding: 10rpx 2% 20rpx 2%;
	background: #fff;
	height: auto;
}
.about-jian>view{
	font-size: 28rpx;
	color: #333;
	line-height: 42rpx;
}
.about-jian>view>text{
	font-size: 28rpx;
	color: #333;
	line-height: 42rpx;
	padding-right: 15rpx;
}