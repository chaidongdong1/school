/* pages/start/start.wxss */
page{
  background: #309efd;
}
image{
  display: block;
}
.section1{
  color: #fff;
  font-size: 40rpx;
  line-height: 100rpx;
  height: 100rpx;
  text-align: center;
  margin: 10rpx 0 50rpx;
  letter-spacing: 3rpx;
}
.section2{
  width: 750rpx;
  height: 540rpx;
  margin-bottom: 80rpx;
}
.section3{
  width: 420rpx;
  height: 80rpx;
  padding: 0 40rpx 0 30rpx;
  /* background: #fff; */
  margin: 0 auto;
  border-radius: 10rpx;
  border: 1rpx solid #fff;
  color: #fff;
}
.wrap{
  width: 400rpx;
}
.arrow::after{
  border-top: 4rpx solid #fff;
  border-right: 4rpx solid #fff;
}
.section3_img{
  width: 42rpx;
  height: 42rpx;
  margin: 24rpx 0;
}
.school_picker{
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
  width: 320rpx;
}
.section4{
  margin: 20rpx 0 20rpx;
}
.title{
  font-size: 40rpx;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  margin-bottom: 5rpx;
}
.txt{
  font-size: 24rpx;
  color: #fff;
  line-height: 30rpx;
  text-align: center;
}

.btn{
  width: 210rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  font-size: 30rpx;
  color: #309efd;
  border-radius: 10rpx;
  text-align: center;
  margin: 40rpx auto;
  letter-spacing: 2rpx;
}