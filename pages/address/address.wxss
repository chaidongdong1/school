/* pages/address/address.wxss */
.address{
	width: 100%;
	height: auto;
}
.addAddress{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	margin-top: 20rpx;
	display: flex;
	background-color: #fff;
}
.addAddress>view:first-child{
	width: 35rpx;
	height: 35rpx;
	padding: 0 10rpx 0 40rpx;
	margin-top: 5rpx;
}
.addAddress>view:first-child>image{
	width: 100%;
	height: 100%;
}
.addAddress>view:nth-child(2){
	flex: 1;
	font-size: 30rpx;
	color: #333;
}
.addAddress>view:last-child{
	width: 15rpx;
	height: 25rpx;
	padding:0 30rpx;
}
.addAddress>view:last-child>image{
	width: 100%;
	height: 100%
}
