/* pages/reset/reset.wxss */
.reset{
	width: 100%;
	height: auto;
	margin-top: 30rpx;
	background-color: #fff;
}
.reset>view{
	width: 92%;
	height: 88rpx;
	line-height: 88rpx;
	margin:  0 4%;
	display: flex;
	border-bottom: 1px solid #e7e7e7;
}
.reset>view>view{
	width: 150rpx;
	height: 100%;
	font-size: 32rpx;
	color: #000;
}
.reset>view>input{
	flex: 1;
	height: 100%;
	line-height: 88rpx;
	font-size: 30rpx;
	color: #333;
	margin: 0 25rpx;
}
.reset-button{
	width: 92%;
	height: 88rpx;
	line-height: 88rpx;
	margin-top: 60rpx;
	padding: 0 4%;
}
.reset-button>button{
	width: 100%;
	height: 100%;
	background-color: #309EFD;
	color: #fff;
	font-size: 38rpx;
	border-radius: 15rpx;
}