/* pages/evaluateList/evaluateList.wxss */

.list {
  width: 100%;
  height: auto;
}

.list-top {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
  margin-bottom: 20rpx;
}

.list-top>view {
  width: 20%;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  line-height: 60rpx;
}

.list-top>view>view {
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
}

.list-top-active {
  color: #f00 !important;
  border-bottom: 4rpx solid #f00;
}

.list-top-active>view {
  color: #f00 !important;
}

.list-eavl {
  width: 100%;
  height: auto;
}

.list-e-one {
  width: 96%;
  height: auto;
  padding: 20rpx 2% 10rpx 2%;
  margin-bottom: 20rpx;
  background: #fff;
}

.list-e-one>view:first-child {
  width: 100%;
  height: 110rpx;
  display: flex;
}

.list-e-one>view:first-child>image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx solid #eee;
  box-sizing: border-box;
}

.name{
  flex: 1;
  height: 100rpx;
  font-size: 34rpx;
  color: #333;
  margin: 10rpx 20rpx 0 20rpx;
}

.name>view:first-child {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
}

.name>view:last-child {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}

.name>view:last-child>view:first-child>image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
}
.name>view:last-child>view:last-child{
  font-size: 26rpx;
  color: #666;
}
.list-e-nei {
  width: 100%;
  height: auto;
}

.list-e-nei>view:first-child {
  font-size: 30rpx;
  color: #333;
  line-height: 46rpx;
}

.list-e-nei>view:nth-child(2) {
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
}
.img_wrap{
  width: 210rpx;
  height: 210rpx;
  margin: 15rpx 20rpx 10rpx 0;
  display: flex;
  border: 1rpx solid #f4f4f4;
}
.img_wrap>image {
  max-width: 210rpx;
  max-height: 210rpx;
  width: 210rpx;
  margin: auto;
}

.list-e-nei>view:last-child {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
}

.order-quanbu {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin: 20rpx 0;
}

.order-wu {
  width: 100%;
  height: 100vh;
  background: #fff;
}

.order-wu>view:first-child {
  width: 325rpx;
  height: 330rpx;
  padding: 220rpx 0 50rpx 0;
  margin: 0 auto;
}

.order-wu>view:first-child>image {
  width: 100%;
  height: 100%;
}

.order-wu>view:nth-child(2) {
  text-align: center;
  font-size: 32rpx;
  color: #333;
  margin: 20rpx 0;
}

.order-wu>view:last-child {
  font-size: 30rpx;
  color: #666;
  text-align: center;
}